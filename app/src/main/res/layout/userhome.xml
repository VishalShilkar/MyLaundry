<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_light">

    <ImageButton
        android:id="@+id/w_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/w_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/w_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_image"
        android:background="#444444"
        android:gravity="center"
        android:text="Welcome User"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/schedulepickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shpoppersdetails"
        android:layout_alignStart="@+id/shpoppersdetails"
        android:layout_below="@+id/shpoppersdetails"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:onClick="action"
        android:padding="20dp"
        android:text="Schedule Pickup" />

    <Button
        android:id="@+id/shpoppersdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:ems="10"
        android:onClick="action"
        android:padding="20dp"
        android:text="Shopper's Detail" />

    <Button
        android:id="@+id/showMyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shpoppersdetails"
        android:layout_alignStart="@+id/shpoppersdetails"
        android:layout_below="@+id/schedulepickup"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:onClick="action"
        android:padding="20dp"
        android:text="My Details" />

</RelativeLayout>